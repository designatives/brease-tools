{
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "declarationDir": "dist/types",
    "emitDeclarationOnly": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ES6",
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "*": ["types/*"]
    },
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["./node_modules/@types", "./declarations.d.ts"],
    "lib": ["DOM", "ESNext"]
  },
  "include": ["./declarations.d.ts","./src/**/*"],
  "exclude": ["node_modules", "dist","src/index-with-styles.ts"]
}
